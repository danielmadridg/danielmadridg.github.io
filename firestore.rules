rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - only authenticated users can read their own or access via cloud functions
    // Access key searches happen via cloud functions, not direct client reads
    match /users/{userId} {
      // Only allow reading own user document
      allow read: if request.auth.uid == userId;
      // Only allow writing own user document
      allow write: if request.auth.uid == userId;
    }

    // Verification codes - only server can write, only accessible via cloud functions
    match /verificationCodes/{email} {
      allow read, write: if false; // All access through Cloud Functions only
    }
  }
}
